@model  MyFoodDiary.Models.TrackablesViewModel

@Scripts.Render("~/bundles/jqueryui")

<link href="@Url.Content("~//Content/themes/vader/jquery-ui-1.10.3.custom.css")" rel="stylesheet" type="text/css" />

<table id="trackablesTable">
    <tr>
        <th>
            Name
        </th>
        <th>
        </th>
    </tr>

    @foreach (var trackable in Model.Trackables)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => trackable.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { code = trackable.Id })
            @Html.ActionLink("Delete", "Delete", new { code = trackable.Id }, new { @class = "DeleteTrackableLink" })
        </td>
    </tr>
    }
</table>

<p>
    @Html.ActionLink("Add a new Trackable", "Create")
</p>

<script src="@Url.Content("~/Scripts/MyFoodDiaryTrackables.js")" type="text/javascript"></script>
