@model  MyFoodDiary.Models.MealsViewModel

@Scripts.Render("~/bundles/jqueryui")

<link href="@Url.Content("~//Content/themes/vader/jquery-ui-1.10.3.custom.css")" rel="stylesheet" type="text/css" />

<table id="mealTable">
    <tr>
        <th>
        </th>
    </tr>

    @foreach (var meal in Model.Meals)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => meal.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = meal.Id })
            @Html.ActionLink("Delete", "DeleteMeal", new { mealId = meal.Id }, new { @class = "DeleteMealLink" })
        </td>
    </tr>
    }
</table>

<br />
<p>
    @Html.ActionLink("Add a new meal", "Create")
</p>

<script src="@Url.Content("~/Scripts/MyFoodDiaryMeals.js")" type="text/javascript"></script>
