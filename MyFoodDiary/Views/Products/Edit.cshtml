@model  MyFoodDiary.Models.ProductViewModel

@Scripts.Render("~/bundles/jqueryui")

<link href="@Url.Content("~//Content/themes/vader/jquery-ui-1.10.3.custom.css")" rel="stylesheet" type="text/css" />


@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)


    <div class="editor-label">
        @Html.LabelFor(model => model.Name)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Name)
        @Html.ValidationMessageFor(model => model.Name)
    </div>


    foreach (string key in Model.Nutrients.Keys)
    {
        <div class="editor-label">
            @Html.Label(key)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Nutrients[key])
            @Html.ValidationMessageFor(model => model.Nutrients[key])
        </div>
    }

    @*<div class="editor-field">
        @Html.RadioButtonFor(model => model.ValuesArePerItem, false) All values are in grams, per 100g serving.
    </div>

    <div class="editor-field">
        @Html.RadioButtonFor(model => model.ValuesArePerItem, true) All values are in grams, per item.
    </div>*@

    <div class="editor-label">
        @Html.LabelFor(model => model.ServingSize)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.ServingSize)
        @Html.ValidationMessageFor(model => model.ServingSize)
    </div>

    <p>
        <input type="submit" value="Save" />
    </p>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="@Url.Content("~/Scripts/MyFoodDiaryProducts.js")" type="text/javascript"></script>

