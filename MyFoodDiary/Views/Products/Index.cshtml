@model  MyFoodDiary.Models.ProductsViewModel

@Scripts.Render("~/bundles/jqueryui")

<link href="@Url.Content("~//Content/themes/vader/jquery-ui-1.10.3.custom.css")" rel="stylesheet" type="text/css" />

<table id="productTable">
    <tr>
        <th>
            Name
        </th>
        <th>
            Calories            
        </th>
        <th>
            Fat
        </th>
        <th>
            Carbohydrates
        </th>
        <th>
            Total Sugars
        </th>
        <th>
            Protein            
        </th>
        <th>
            Alcohol
        </th>
        <th>
        </th>
    </tr>

    @foreach (var product in Model.Products)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => product.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => product.Nutrients["Calories"])
        </td>
        <td>
            @Html.DisplayFor(modelItem => product.Nutrients["Fat"])
        </td>
        <td>
            @Html.DisplayFor(modelItem => product.Nutrients["Carbohydrates"])
        </td>
        <td>
            @Html.DisplayFor(modelItem => product.Nutrients["TotalSugars"])
        </td>
        <td>
            @Html.DisplayFor(modelItem => product.Nutrients["Protein"])
        </td>
        <td>
            @Html.DisplayFor(modelItem => product.Nutrients["Alcohol"])
        </td>       
        <td>
            @Html.ActionLink("Edit", "Edit", new { code = product.Code })
            @Html.ActionLink("Delete", "Delete", new { code = product.Code }, new { @class = "DeleteProductLink" })
        </td>
    </tr>
    }
</table>

<p>
    @Html.ActionLink("Add a new Product", "Create")
</p>

<script src="@Url.Content("~/Scripts/MyFoodDiaryProducts.js")" type="text/javascript"></script>
