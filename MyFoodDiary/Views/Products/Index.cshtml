@model  MyFoodDiary.Models.ProductsViewModel

@Scripts.Render("~/bundles/jqueryui")

<link href="@Url.Content("~//Content/themes/vader/jquery-ui-1.10.3.custom.css")" rel="stylesheet" type="text/css" />

<table id="productTable">
    <tr>
        <th>
            Name
        </th>
        <th>
            Calories
        </th>
        <th>
            Fat
        </th>
        <th>
            Carbohydrates
        </th>
        <th>
            Total Sugars
        </th>
        <th>
            Protein
        </th>
        <th>
            Alcohol
        </th>
        <th>
            Calcium
        </th>
        <th>
            Vitamin D
        </th>
        <th>
        </th>
    </tr>

    @foreach (var product in Model.Products)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => product.Name)
        </td>
        <td>
            @{var calories = product.ProductMacronutrients.Quantity("Calories");}
            @Html.DisplayFor(m => calories)
        </td>
        <td>
            @{var fat = product.ProductMacronutrients.Quantity("Fat");}
            @Html.DisplayFor(m => fat)
        </td>
        <td>
            @{var carbohydrates = product.ProductMacronutrients.Quantity("Carbohydrates");}
            @Html.DisplayFor(m => carbohydrates)
        </td>
        <td>
            @{var totalSugars = product.ProductMacronutrients.Quantity("Total Sugars");}
            @Html.DisplayFor(m => totalSugars)
        </td>
        <td>
            @{var protein = product.ProductMacronutrients.Quantity("Protein");}
            @Html.DisplayFor(m => protein)
        </td>
        <td>
            @{var alcohol = product.ProductMacronutrients.Quantity("Alcohol");}
            @Html.DisplayFor(m => alcohol)
        </td>
        <td>
            @{var calcium = product.ProductMicronutrients.Quantity("Calcium");}
            @Html.DisplayFor(m => calcium)
        </td>
        <td>
            @{var vitamind = product.ProductMicronutrients.Quantity("Vitamin D");}
            @Html.DisplayFor(m => vitamind)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { code = product.Code })
            @Html.ActionLink("Delete", "Delete", new { code = product.Code }, new { @class = "DeleteProductLink" })
        </td>
    </tr>
    }
</table>

<p>
    @Html.ActionLink("Add a new Product", "Create")
</p>

<script src="@Url.Content("~/Scripts/MyFoodDiaryProducts.js")" type="text/javascript"></script>
